{
  "name": "asset-catalog-viewer",
  "displayName": "Asset Catalog Viewer",
  "description": "View .xcassets content like in Xcode",
  "version": "0.1.0",
  "publisher": "artemnovichkov",
  "author": {
    "name": "Artem Novichkov",
    "url": "https://artemnovichkov.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/artemnovichkov/asset-catalog-viewer.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "xcassets",
    "asset catalog",
    "xcode",
    "ios",
    "macos",
    "imageset",
    "colorset",
    "appicon",
    "assets",
    "preview",
    "viewer"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "homepage": "https://github.com/artemnovichkov/asset-catalog-viewer",
  "bugs": {
    "url": "https://github.com/artemnovichkov/asset-catalog-viewer/issues"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xcassetsViewer.openViewer",
        "title": "Open Asset Catalog Viewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "xcassetsViewer.openViewer",
          "when": "explorerResourceIsFolder && resourceFilename =~ /\\.xcassets$/",
          "group": "navigation"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "asset-catalog-viewer-icons",
        "label": "Asset Catalog Viewer Icons",
        "path": "./icons/asset-catalog-viewer-icons-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "debug": "npm run compile && code --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}

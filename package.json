{
  "name": "asset-catalog-viewer",
  "displayName": "Asset Catalog Viewer",
  "description": "View .xcassets content like in Xcode",
  "version": "0.12.0",
  "publisher": "artemnovichkov",
  "author": {
    "name": "Artem Novichkov",
    "url": "https://artemnovichkov.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/artemnovichkov/asset-catalog-viewer.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization"
  ],
  "keywords": [
    "xcassets",
    "asset catalog",
    "xcode",
    "ios",
    "macos",
    "imageset",
    "colorset",
    "appicon",
    "assets",
    "preview",
    "viewer"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "homepage": "https://github.com/artemnovichkov/asset-catalog-viewer",
  "bugs": {
    "url": "https://github.com/artemnovichkov/asset-catalog-viewer/issues"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xcassetsViewer.openViewer",
        "title": "Open Asset Catalog Viewer"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "xcassetsViewer.openViewer",
          "when": "explorerResourceIsFolder && resourceFilename =~ /\\.xcassets$/",
          "group": "navigation"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "asset-catalog-viewer-icons",
        "label": "Asset Catalog Viewer Icons",
        "path": "./icons/asset-catalog-viewer-icons-theme.json"
      }
    ],
    "configuration": {
      "title": "Asset Catalog Viewer",
      "properties": {
        "assetCatalogViewer.largeAssetThreshold": {
          "type": "number",
          "default": 500,
          "description": "Threshold in KB for large asset warnings."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile:prod",
    "compile:prod": "tsc -p ./ && node esbuild.webview.mjs --minify && npm run compile:native",
    "compile": "tsc -p ./ && npm run compile:webview && npm run compile:native",
    "compile:webview": "node esbuild.webview.mjs",
    "compile:native": "swiftc -o native/ColorPicker native/ColorPicker.swift -framework AppKit",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "debug": "npm run compile && code --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@dotlottie/player-component": "^2.7.12",
    "@vscode/codicons": "^0.0.44",
    "lottie-web": "^5.13.0",
    "pdfjs-dist": "^5.4.530"
  }
}
